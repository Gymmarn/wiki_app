class CommentsController < ApplicationController

  def index
    @comments = Wiki.paginate(:page => params[:page])
    @title = "All comments"
  end

  def create
    @wiki = Wiki.find(params[:id])
    @comment = @wiki.comments.build(params[:comment])
    if @comment.save
      redirect_to wikis_path[:id], :flash => { :success => "Comment posted!" }
    else
      redirect to root_path
    end
  end
end